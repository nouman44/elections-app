<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:fillViewport="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/viewSilsillah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="30dp"
                android:text="Silsillah Number"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/viewGharana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@id/viewSilsillah"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="30dp"
                android:text="Gharaana Number"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/viewBlock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@id/viewGharana"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="30dp"
                android:text="Block Code"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <View
                android:id="@+id/lineBlock"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignTop="@id/viewBlock"
                android:layout_marginStart="10dp"
                android:layout_marginTop="50dp"
                android:background="@color/voteborder" />

            <TextView
                android:id="@+id/viewImageAlign"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/lineBlock"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"/>

            <TextView
                android:id="@+id/cnicImage"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/viewImageAlign"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:text="CNIC Image"
                android:gravity="center_vertical"
                android:textColor="#FFFFFF"
                android:background="@color/colorPrimary" />


            <TextView
                android:id="@+id/viewName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/cnicImage"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="90dp"
                android:text="Name"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/viewFather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@id/viewName"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="30dp"
                android:text="Father Name"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/viewCnic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/viewFather"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="30dp"
                android:text="CNIC"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/viewAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/viewCnic"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="30dp"
                android:text="Age"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/viewNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/viewAge"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="30dp"
                android:text="Phone Number"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <View
                android:id="@+id/lineNumber"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignTop="@id/viewNumber"
                android:layout_marginStart="10dp"
                android:layout_marginTop="50dp"
                android:background="@color/voteborder" />

            <TextView
                android:id="@+id/viewAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@id/lineNumber"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="30dp"
                android:text="Address"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/viewAssignee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/viewAddress"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="30dp"
                android:text="Assignee"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

            <View
                android:id="@+id/lineAssignee"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignTop="@+id/viewAssignee"
                android:layout_marginStart="10dp"
                android:layout_marginTop="50dp"
                android:background="@color/voteborder" />


            <TextView
                android:id="@+id/viewVote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@id/lineAssignee"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="30dp"
                android:text="Vote Casted"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/silsillah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:text="Silsillah Number"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gharaana"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_centerHorizontal="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_alignTop="@id/silsillah"
                android:layout_marginTop="30dp"
                android:text="Gharaana Number"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/blockCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_alignTop="@id/gharaana"
                android:layout_marginTop="30dp"
                android:text="Block Code"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <View
                android:id="@+id/lineBlock1"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginRight="10dp"
                android:layout_alignTop="@id/blockCode"
                android:layout_marginTop="50dp"
                android:background="@color/voteborder" />

            <Button
                android:id="@+id/cnicImageButton"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/lineBlock1"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/vote_border"
                android:onClick="takePhoto"
                android:text="Add Image"
                android:textColor="@color/voteborder" />

            <ImageView
                android:id="@+id/cnicImage1"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/cnicImageButton"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/no_image"/>


            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_alignTop="@+id/cnicImage1"
                android:layout_marginTop="90dp"
                android:text="Name"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fatherName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_alignTop="@id/name"
                android:layout_marginTop="30dp"
                android:text="Father Name"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cnic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_alignTop="@id/fatherName"
                android:layout_marginTop="30dp"
                android:text="CNIC"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_alignTop="@id/cnic"
                android:layout_marginTop="30dp"
                android:text="Age"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_alignTop="@id/age"
                android:layout_marginTop="30dp"
                android:inputType="number"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <View
                android:id="@+id/lineNumber1"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginEnd="10dp"
                android:layout_alignTop="@id/number"
                android:layout_marginTop="50dp"
                android:background="@color/voteborder" />


            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_alignTop="@id/lineNumber1"
                android:layout_marginTop="30dp"
                android:text="address"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/assignee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_alignTop="@id/address"
                android:layout_marginTop="30dp"
                android:text="Assignee"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <View
                android:id="@+id/lineAssignee1"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="50dp"
                android:layout_alignTop="@id/assignee"
                android:background="@color/voteborder" />


            <Button
                android:id="@+id/voteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_alignTop="@id/lineAssignee1"
                android:layout_marginTop="15dp"
                android:background="@drawable/vote_border"
                android:text="YES"
                android:layout_marginBottom="10dp"
                android:textColor="@color/colorPrimary" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>